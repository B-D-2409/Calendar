{
  "compilerOptions": {
    "target": "ESNext",
    "skipLibCheck": true, 
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,  
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "types": ["node", "express", "cors", "bcrypt", "jsonwebtoken", "qs"]
    
  },
  "include": ["src", "env.d.ts", "server/**/*.ts", "Mongo.ts"]

}
